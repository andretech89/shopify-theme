{{ 'homepage.css' | asset_url | stylesheet_tag }}

<!-- Hero Banner Section -->
<section class="relative h-screen overflow-hidden flex items-center justify-center">
  <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover z-0">
    <source src="{{ 'synthify-goods-homepage-banner.mp4' | file_url }}" type="video/mp4">
  </video>

  <div class="absolute inset-0 bg-black bg-opacity-40 z-10"></div>

  <div class="relative z-20 text-center text-white px-4">
    <h1 class="text-6xl md:text-8xl font-black mb-4 text-shadow-lg">
      Beyond Ordinary.
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-shadow">
      Viral gadgets. Future-proof design.
    </p>

    <div class="space-y-4">
      <a href="{{ collections.all.url }}" class="cta-button">
        SHOP THE FUTURE
      </a>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section class="featured-grid-container">
  <div class="container mx-auto">
    <h2 class="text-4xl font-black text-center mb-12 text-white">Featured Products</h2>

    <div class="featured-grid">
      <!-- Featured Video Item -->
      <div class="featured-grid-item featured-item">
        <span class="featured-badge">Now Trending</span>
        <video autoplay loop muted playsinline class="featured-grid-item-media">
          <source src="{{ 'synthify-goods-featured-product.mp4' | file_url }}" type="video/mp4">
        </video>
        <div class="featured-grid-item-content">
          <h3 class="featured-grid-item-title">Discover the Unseen</h3>
          <p class="featured-grid-item-description">Experience the future with our curated collection of innovative gadgets from tradelle.io.</p>
          <div class="featured-grid-item-footer">
            <span class="featured-grid-item-tag">Innovation</span>
          </div>
        </div>
      </div>

      <!-- Dynamic Products from tradelle.io -->
      {% assign featured_products = collections.all.products | where: 'available', true | limit: 6 %}
      {% for product in featured_products %}
        <a href="{{ product.url }}" class="featured-grid-item regular-item">
          {% if product.featured_media %}
            <img
              src="{{ product.featured_media | image_url: width: 400 }}"
              alt="{{ product.featured_media.alt | escape }}"
              width="{{ product.featured_media.width }}"
              height="{{ product.featured_media.height }}"
              class="featured-grid-item-media">
          {% else %}
            <div class="featured-grid-item-media bg-gray-800 flex items-center justify-center">
              <i class="fas fa-image text-4xl text-gray-600"></i>
            </div>
          {% endif %}

          <div class="featured-grid-item-content">
            <h3 class="featured-grid-item-title">{{ product.title | truncate: 40 }}</h3>
            <p class="featured-grid-item-description">{{ product.description | strip_html | truncate: 100 }}</p>
            <div class="featured-grid-item-footer">
              <span class="featured-grid-item-tag">{{ product.price | money }}</span>
            </div>
          </div>
        </a>
      {% endfor %}

      <!-- If no products yet, show placeholder items -->
      {% if featured_products.size == 0 %}
        {% for i in (1..6) %}
          <div class="featured-grid-item regular-item">
            <div class="featured-grid-item-media bg-gray-800 flex items-center justify-center">
              <i class="fas fa-box text-4xl text-gray-600"></i>
            </div>
            <div class="featured-grid-item-content">
              <h3 class="featured-grid-item-title">Product Coming Soon</h3>
              <p class="featured-grid-item-description">Amazing products will appear here once you import them from tradelle.io</p>
              <div class="featured-grid-item-footer">
                <span class="featured-grid-item-tag">Soon</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<!-- Collections Section -->
{% if collections.size > 1 %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">Shop by Category</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for collection in collections limit: 6 %}
        {% unless collection.handle == 'all' %}
          <a href="{{ collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 400 }}"
                  alt="{{ collection.title }}"
                  width="{{ collection.featured_image.width }}"
                  height="{{ collection.featured_image.height }}"
                  class="w-full h-48 object-cover">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-th-large text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ collection.title }}</h3>
                <p class="text-gray-400">
                  {{ collection.description | default: 'Discover amazing products in this collection' | truncate: 100 }}
                </p>
                <div class="mt-4">
                  <span class="text-accent">{{ collection.products_count }} products â†’</span>
                </div>
              </div>
            </div>
          </a>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<script src="{{ 'homepage.js' | asset_url }}" defer></script>

