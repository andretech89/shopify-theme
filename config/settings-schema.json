[
  {
    "name": "theme_info",
    "theme_name": "Synthify Goods",
    "theme_version": "1.0.0",
    "theme_author": "Custom",
    "theme_documentation_url": "https://github.com/andretech89/synthify-goods-theme",
    "theme_support_url": "https://github.com/andretech89/synthify-goods-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#0A0A0A",
        "info": "Main background color"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#F5F5F5",
        "info": "Text and secondary elements"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#00FFFF",
        "info": "Buttons and highlights"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body Font",
        "default": "montserrat_n4"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font",
        "default": "montserrat_n4"
      }
    ]
  },
  {
    "name": "Homepage",
    "settings": [
      {
        "type": "header",
        "content": "Hero Section"
      },
      {
        "type": "text",
        "id": "hero_title",
        "label": "Hero Title",
        "default": "Beyond Ordinary."
      },
      {
        "type": "text",
        "id": "hero_subtitle",
        "label": "Hero Subtitle",
        "default": "Viral gadgets. Future-proof design."
      },
      {
        "type": "text",
        "id": "hero_button_text",
        "label": "Hero Button Text",
        "default": "SHOP THE FUTURE"
      },
      {
        "type": "url",
        "id": "hero_button_link",
        "label": "Hero Button Link",
        "default": "/collections/all"
      }
    ]
  },
  {
    "name": "Product Pages",
    "settings": [
      {
        "type": "header",
        "content": "Product Settings"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_product_type",
        "label": "Show product type",
        "default": true
      },
      {
        "type": "select",
        "id": "product_image_size",
        "label": "Product image size",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "text",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      }
    ]
  }
]