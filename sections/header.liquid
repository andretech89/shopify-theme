<header class="fixed top-0 left-0 right-0 z-50 bg-black bg-opacity-90 backdrop-blur-md border-b border-white border-opacity-10">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="{{ routes.root_url }}" class="flex items-center space-x-3">
        {% comment %} Try multiple logo methods {% endcomment %}
        
        {% if settings.logo != blank %}
          {% comment %} Method 1: Theme settings logo (RECOMMENDED) {% endcomment %}
          <img
            src="{{ settings.logo | image_url: width: settings.logo_width }}"
            alt="{{ shop.name | escape }}"
            width="{{ settings.logo_width | default: 150 }}"
            height="auto"
            class="h-10 w-auto max-w-[150px]"
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
          />
          <span class="text-2xl font-bold text-white hidden">{{ shop.name }}</span>
        {% else %}
          {% comment %} Method 2: Try asset_url {% endcomment %}
          <img
            src="{{ 'synthify-goods-logo.png' | asset_url }}"
            alt="{{ shop.name | escape }}"
            width="150"
            height="auto"
            class="h-10 w-auto max-w-[150px]"
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
          />
          
          {% comment %} Method 3: Try file_url as fallback {% endcomment %}
          <img
            src="{{ 'synthify-goods-logo.png' | file_url }}"
            alt="{{ shop.name | escape }}"
            width="150"
            height="auto"
            class="h-10 w-auto max-w-[150px] hidden"
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
          />
          
          {% comment %} Method 4: Text fallback {% endcomment %}
          <span class="text-2xl font-bold text-white hidden">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    <!-- Search -->
    {% render 'animated-search' %}
    
    <!-- Right side icons if needed -->
    <div class="flex items-center space-x-4">
      {% if settings.show_cart_icon %}
        <button id="cart-icon" class="text-white hover:text-accent transition-colors duration-300 p-2 relative">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 2.5M7 13l2.5 2.5m6-2.5h3"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="absolute -top-1 -right-1 bg-accent text-black text-xs rounded-full h-5 w-5 flex items-center justify-center font-bold">
              {{ cart.item_count }}
            </span>
          {% endif %}
        </button>
      {% endif %}
    </div>
  </div>
</header>

<!-- Debug info (remove this after fixing) -->
