{{ 'header.css' | asset_url | stylesheet_tag }}

<header class="site-header sticky top-0 z-50 bg-black/95 backdrop-blur-sm border-b border-gray-800">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo (Left Side) -->
      <div class="flex-shrink-0">
        <a href="{{ routes.root_url }}" class="text-white text-2xl font-bold">
          {% if settings.logo %}
            <img src="{{ settings.logo | image_url: width: settings.logo_width }}" 
                 alt="{{ shop.name }}" 
                 width="{{ settings.logo_width }}" 
                 height="auto"
                 class="h-8 w-auto">
          {% else %}
            {{ shop.name }}
          {% endif %}
        </a>
      </div>

      <!-- Navigation Menu (Center) -->
      <nav class="hidden md:flex space-x-8">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" 
             class="text-white hover:text-cyan-400 transition-colors duration-200 font-medium">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <!-- Right Side: Categories Dropdown, Search, Account, Cart -->
      <div class="flex items-center space-x-4">
        
        <!-- Product Categories Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-1 text-white hover:text-cyan-400 transition-colors duration-200 py-2">
            <span class="font-medium">Categories</span>
            <svg class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180" 
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute right-0 mt-2 w-64 bg-black/95 backdrop-blur-sm border border-gray-700 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
            <div class="py-2">
              {% for collection in collections %}
                {% unless collection.handle == 'frontpage' %}
                  <a href="{{ collection.url }}" 
                     class="block px-4 py-3 text-white hover:bg-cyan-400/10 hover:text-cyan-400 transition-colors duration-200">
                    <div class="flex items-center justify-between">
                      <span class="font-medium">{{ collection.title }}</span>
                      <span class="text-xs text-gray-400">({{ collection.products_count }})</span>
                    </div>
                  </a>
                {% endunless %}
              {% endfor %}
              
              <!-- View All Collections Link -->
              <div class="border-t border-gray-700 mt-2 pt-2">
                <a href="{{ collections.all.url }}" 
                   class="block px-4 py-3 text-cyan-400 hover:bg-cyan-400/10 transition-colors duration-200 font-semibold">
                  View All Products â†’
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Search Icon -->
        <button class="search-toggle text-white hover:text-cyan-400 transition-colors duration-200" 
                aria-label="Search">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>

        <!-- Account Icon -->
        <a href="{{ routes.account_url }}" 
           class="text-white hover:text-cyan-400 transition-colors duration-200" 
           aria-label="Account">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </a>

        <!-- Cart Icon -->
        <a href="{{ routes.cart_url }}" 
           class="relative text-white hover:text-cyan-400 transition-colors duration-200" 
           aria-label="Cart">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0L17 18m-8 0h8"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="absolute -top-2 -right-2 bg-cyan-400 text-black text-xs rounded-full h-5 w-5 flex items-center justify-center font-semibold">
              {{ cart.item_count }}
            </span>
          {% endif %}
        </a>

        <!-- Mobile Menu Toggle -->
        <button class="md:hidden text-white hover:text-cyan-400 transition-colors duration-200" 
                aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

      </div>
    </div>
  </div>

  <!-- Search Bar (Hidden by default, shown when search is clicked) -->
  <div class="search-bar hidden border-t border-gray-800 bg-black/95">
    <div class="container mx-auto px-4 py-4">
      <form action="{{ routes.search_url }}" method="get" role="search" class="relative max-w-md mx-auto">
        <input type="search" 
               name="q" 
               placeholder="Search products..." 
               class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 pl-12 text-white placeholder-gray-400 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20">
        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </form>
    </div>
  </div>
</header>

<!-- Mobile Menu (Hidden by default) -->
<div class="mobile-menu hidden md:hidden bg-black/95 backdrop-blur-sm border-b border-gray-800">
  <div class="container mx-auto px-4 py-4">
    <nav class="space-y-4">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" 
           class="block text-white hover:text-cyan-400 transition-colors duration-200 py-2 font-medium">
          {{ link.title }}
        </a>
      {% endfor %}
      
      <!-- Mobile Categories -->
      <div class="border-t border-gray-800 pt-4 mt-4">
        <h3 class="text-cyan-400 font-semibold mb-3">Categories</h3>
        {% for collection in collections %}
          {% unless collection.handle == 'frontpage' %}
            <a href="{{ collection.url }}" 
               class="block text-white hover:text-cyan-400 transition-colors duration-200 py-2 pl-4">
              {{ collection.title }} ({{ collection.products_count }})
            </a>
          {% endunless %}
        {% endfor %}
      </div>
    </nav>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search toggle functionality
  const searchToggle = document.querySelector('.search-toggle');
  const searchBar = document.querySelector('.search-bar');
  
  if (searchToggle && searchBar) {
    searchToggle.addEventListener('click', function() {
      searchBar.classList.toggle('hidden');
      if (!searchBar.classList.contains('hidden')) {
        const searchInput = searchBar.querySelector('input[type="search"]');
        if (searchInput) {
          searchInput.focus();
        }
      }
    });
  }

  // Mobile menu toggle
  const mobileMenuToggle = document.querySelector('.md\\:hidden button[aria-label="Menu"]');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  if (mobileMenuToggle && mobileMenu) {
    mobileMenuToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
    });
  }
});
</script>

<style>
.text-shadow {
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.text-shadow-lg {
  text-shadow: 3px 3px 6px rgba(0,0,0,0.7);
}

/* Smooth dropdown animation */
.group:hover .group-hover\\:opacity-100 {
  animation: fadeInUp 0.2s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Custom scrollbar for dropdown if needed */
.group:hover div {
  scrollbar-width: thin;
  scrollbar-color: #00FFFF #1F2937;
}

.group:hover div::-webkit-scrollbar {
  width: 6px;
}

.group:hover div::-webkit-scrollbar-track {
  background: #1F2937;
}

.group:hover div::-webkit-scrollbar-thumb {
  background-color: #00FFFF;
  border-radius: 3px;
}
</style>