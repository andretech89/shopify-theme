<header class="site-header sticky top-0 z-50 bg-black/95 backdrop-blur-sm border-b border-gray-800">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      
      <!-- Navigation Menu (Left Side) -->
      <nav class="hidden md:flex space-x-8">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="text-white hover:text-cyan-400 transition-colors duration-200 font-medium">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <!-- Mobile: Empty div to maintain spacing -->
      <div class="md:hidden flex-1"></div>

      <!-- Right Side -->
      <div class="flex items-center space-x-4">
        
        <!-- Categories Dropdown -->
        <div class="relative">
          <button id="categoriesButton" class="flex items-center space-x-1 text-white hover:text-cyan-400 transition-colors duration-200 py-2">
            <span class="font-medium">Categories</span>
            <svg id="categoriesArrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown -->
          <div id="categoriesDropdown" class="absolute right-0 mt-2 w-64 bg-black/95 backdrop-blur-sm border border-gray-700 rounded-lg shadow-xl opacity-0 invisible transition-all duration-200 transform translate-y-2 z-50">
            <div class="py-2">
              {% for collection in collections %}
                {% unless collection.handle == 'frontpage' %}
                  <a href="{{ collection.url }}" class="block px-4 py-3 text-white hover:bg-cyan-400/10 hover:text-cyan-400 transition-colors duration-200">
                    <div class="flex items-center justify-between">
                      <span class="font-medium">{{ collection.title }}</span>
                      <span class="text-xs text-gray-400">({{ collection.products_count }})</span>
                    </div>
                  </a>
                {% endunless %}
              {% endfor %}
              <div class="border-t border-gray-700 mt-2 pt-2">
                <a href="{{ collections.all.url }}" class="block px-4 py-3 text-cyan-400 hover:bg-cyan-400/10 transition-colors duration-200 font-semibold">
                  View All Products â†’
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Search Icon -->
        <button class="search-toggle text-white hover:text-cyan-400 transition-colors duration-200" aria-label="Search">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>

        <!-- Account -->
        <a href="{{ routes.account_url }}" class="text-white hover:text-cyan-400 transition-colors duration-200" aria-label="Account">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>

        <!-- Cart -->
        <a href="{{ routes.cart_url }}" class="relative text-white hover:text-cyan-400 transition-colors duration-200" aria-label="Cart">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0L17 18m-8 0h8" />
          </svg>
          {% if cart.item_count > 0 %}
            <span class="absolute -top-2 -right-2 bg-cyan-400 text-black text-xs rounded-full h-5 w-5 flex items-center justify-center font-semibold">
              {{ cart.item_count }}
            </span>
          {% endif %}
        </a>

        <!-- Mobile Menu Toggle -->
        <button class="md:hidden text-white hover:text-cyan-400 transition-colors duration-200" aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Search Bar with Collection Dropdown -->
  <div class="search-bar hidden border-t border-gray-800 bg-black/95">
    <div class="container mx-auto px-4 py-4">
      <form onsubmit="return filterSearchByCollection(this)" role="search" class="relative max-w-2xl mx-auto flex space-x-2 items-center">
        
        <!-- Collections Dropdown -->
        <select name="collection" class="bg-gray-900 border border-gray-700 text-white rounded-lg px-3 py-2 text-sm focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/20">
          <option value="">All Collections</option>
          {% for collection in collections %}
            {% unless collection.handle == 'frontpage' %}
              <option value="{{ collection.handle }}">{{ collection.title }}</option>
            {% endunless %}
          {% endfor %}
        </select>

        <!-- Search Input -->
        <div class="relative w-full">
          <input type="search" 
                 name="q" 
                 placeholder="Search products..." 
                 class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 pl-12 text-white placeholder-gray-400 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20">
          <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" 
               fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </form>
    </div>
  </div>
</header>
