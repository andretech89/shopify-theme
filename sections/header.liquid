<header class="fixed top-0 left-0 right-0 z-50 bg-black bg-opacity-90 backdrop-blur-md border-b border-white border-opacity-10">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    
    <!-- Logo -->
    <div class="flex items-center">
      <a href="{{ routes.root_url }}" class="flex items-center space-x-3">
        <img
          src="{{ 'synthify-goods-logo.png' | file_url }}"
          alt="Synthify Goods"
          width="100"
          height="40"
          class="h-10 w-auto"
        />
      </a>
    </div>

    <!-- Right-side: Search and Dropdown -->
    <div class="flex items-center space-x-6">
      <!-- Search -->
      {% render 'animated-search' %}

      <!-- Categories Dropdown -->
      <div class="relative">
        <select onchange="if (this.value) window.location.href=this.value"
                class="bg-black bg-opacity-60 text-white px-4 py-2 rounded text-sm border border-white border-opacity-20 hover:bg-opacity-80 transition">
          <option disabled selected>Categories</option>
          {% for collection in collections %}
            {% if collection.all_products_count > 0 %}
              <option value="{{ collection.url }}">{{ collection.title }}</option>
            {% endif %}
          {% endfor %}
        </select>
      </div>
    </div>

  </div>
</header>
