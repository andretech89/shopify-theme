{{ 'homepage.css' | asset_url | stylesheet_tag }}

<!-- Hero Banner Section -->
<section class="relative h-screen overflow-hidden flex items-center justify-center">
  {% if section.settings.video_filename != blank %}
    <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover z-0">
      <source src="{{ section.settings.video_filename | asset_url }}" type="video/mp4">
    </video>
  {% endif %}
  
  <div class="absolute inset-0 bg-black bg-opacity-40 z-10"></div>
  
  <div class="relative z-20 text-center text-white px-4">
    <h1 class="text-6xl md:text-8xl font-black mb-4 text-shadow-lg">
      {{ section.settings.heading | default: 'Beyond Ordinary.' }}
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-shadow">
      {{ section.settings.subheading | default: 'Viral gadgets. Future-proof design.' }}
    </p>
    
    <div class="space-y-4">
      <a href="{{ section.settings.button_url | default: collections.all.url }}" class="cta-button">
        {{ section.settings.button_text | default: 'SHOP THE FUTURE' }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Beyond Ordinary."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Viral gadgets. Future-proof design."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP THE FUTURE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "video_filename",
      "label": "Video Filename",
      "info": "Enter just the filename (e.g. 'synthify-goods-homepage-banner.mp4')",
      "default": "synthify-goods-homepage-banner.mp4"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

