<!-- sections/featured-products.liquid -->
<section class="featured-grid-container py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-black text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Featured Products' }}
    </h2>
    
    <div class="featured-grid max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- Featured Video Item (if enabled) -->
      {% if section.settings.show_trending_video %}
      <div class="featured-grid-item featured-item bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
        <div class="relative">
          <span class="absolute top-4 left-4 z-10 bg-orange-500 text-white px-3 py-1 rounded-full text-xs font-bold">
            {{ section.settings.trending_badge | default: 'Now Trending' }}
          </span>
          
          {% if section.settings.featured_video_filename %}
            <video autoplay loop muted playsinline class="w-full h-48 object-cover">
              <source src="{{ section.settings.featured_video_filename | asset_url }}" type="video/mp4">
            </video>
          {% else %}
            <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
              <p class="text-gray-400">No video file specified</p>
            </div>
          {% endif %}
        </div>
        
        <div class="p-6">
          <h3 class="text-white text-lg font-bold mb-2">
            {{ section.settings.trending_title | default: 'Discover the Unseen' }}
          </h3>
          <p class="text-gray-300 text-sm mb-4">
            {{ section.settings.trending_description | default: 'Experience the future with our curated collection of innovative gadgets from tradelle.io.' }}
          </p>
          <div class="flex justify-between items-center">
            <span class="bg-gray-600 text-white px-3 py-1 rounded-full text-xs">
              {{ section.settings.trending_tag | default: 'Innovation' }}
            </span>
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Manual Product Selection from Blocks -->
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          {% assign product = block.settings.product %}
          
          <a href="{{ product.url }}" class="featured-grid-item regular-item bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105 block">
            {% if product.featured_media %}
              <img src="{{ product.featured_media | image_url: width: 400 }}" 
                   alt="{{ product.featured_media.alt | escape }}" 
                   width="400" height="192"
                   class="w-full h-48 object-cover">
            {% else %}
              <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                <span class="text-gray-400 text-4xl">ðŸ“¦</span>
              </div>
            {% endif %}
            
            <div class="p-6">
              <h3 class="text-white text-lg font-bold mb-2">
                {{ product.title | truncate: 40 }}
              </h3>
              <p class="text-gray-300 text-sm mb-4">
                {{ product.description | strip_html | truncate: 100 }}
              </p>
              <div class="flex justify-between items-center">
                <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                  {{ product.price | money }}
                </span>
                {% if product.available == false %}
                  <span class="text-red-400 text-xs">Sold Out</span>
                {% endif %}
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}

      <!-- Fallback: Collection-based products if no manual products selected -->
      {% assign manual_products_count = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          {% assign manual_products_count = manual_products_count | plus: 1 %}
        {% endif %}
      {% endfor %}
      
      {% if manual_products_count == 0 %}
        {% if section.settings.collection != blank %}
          {% assign selected_collection = collections[section.settings.collection] %}
          {% assign products_to_show = section.settings.products_count | default: 6 %}
          {% if section.settings.show_trending_video %}
            {% assign products_to_show = products_to_show | minus: 1 %}
          {% endif %}
          
          {% if selected_collection %}
            {% for product in selected_collection.products limit: products_to_show %}
              <a href="{{ product.url }}" class="featured-grid-item regular-item bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105 block">
                {% if product.featured_media %}
                  <img src="{{ product.featured_media | image_url: width: 400 }}" 
                       alt="{{ product.featured_media.alt | escape }}" 
                       width="400" height="192"
                       class="w-full h-48 object-cover">
                {% else %}
                  <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                    <span class="text-gray-400 text-4xl">ðŸ“¦</span>
                  </div>
                {% endif %}
                
                <div class="p-6">
                  <h3 class="text-white text-lg font-bold mb-2">
                    {{ product.title | truncate: 40 }}
                  </h3>
                  <p class="text-gray-300 text-sm mb-4">
                    {{ product.description | strip_html | truncate: 100 }}
                  </p>
                  <div class="flex justify-between items-center">
                    <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                      {{ product.price | money }}
                    </span>
                    {% if product.available == false %}
                      <span class="text-red-400 text-xs">Sold Out</span>
                    {% endif %}
                  </div>
                </div>
              </a>
            {% endfor %}
          {% else %}
            <!-- Collection not found fallback -->
            {% assign placeholder_count = section.settings.products_count | default: 6 %}
            {% if section.settings.show_trending_video %}
              {% assign placeholder_count = placeholder_count | minus: 1 %}
            {% endif %}
            
            {% for i in (1..placeholder_count) %}
              <div class="featured-grid-item regular-item bg-gray-800 rounded-lg overflow-hidden">
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <span class="text-gray-400 text-4xl">ðŸ“¦</span>
                </div>
                <div class="p-6">
                  <h3 class="text-white text-lg font-bold mb-2">
                    Product Coming Soon
                  </h3>
                  <p class="text-gray-300 text-sm mb-4">
                    Amazing products will appear here once you import them from tradelle.io
                  </p>
                  <div class="flex justify-between items-center">
                    <span class="bg-gray-600 text-white px-3 py-1 rounded-full text-sm">
                      Soon
                    </span>
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        {% else %}
          <!-- No collection selected, show placeholders -->
          {% assign placeholder_count = section.settings.products_count | default: 6 %}
          {% if section.settings.show_trending_video %}
            {% assign placeholder_count = placeholder_count | minus: 1 %}
          {% endif %}
          
          {% for i in (1..placeholder_count) %}
            <div class="featured-grid-item regular-item bg-gray-800 rounded-lg overflow-hidden">
              <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                <span class="text-gray-400 text-4xl">ðŸ“¦</span>
              </div>
              <div class="p-6">
                <h3 class="text-white text-lg font-bold mb-2">
                  Product Coming Soon
                </h3>
                <p class="text-gray-300 text-sm mb-4">
                  Amazing products will appear here once you import them from tradelle.io
                </p>
                <div class="flex justify-between items-center">
                  <span class="bg-gray-600 text-white px-3 py-1 rounded-full text-sm">
                    Soon
                  </span>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection (Fallback)",
      "info": "Choose which collection to display if no manual products are selected"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of products to show (fallback)",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "header",
      "content": "Trending Video Section"
    },
    {
      "type": "checkbox",
      "id": "show_trending_video",
      "label": "Show trending video section",
      "default": true
    },
    {
      "type": "text",
      "id": "trending_badge",
      "label": "Trending Badge Text",
      "default": "Now Trending"
    },
    {
      "type": "text",
      "id": "trending_title",
      "label": "Trending Section Title",
      "default": "Discover the Unseen"
    },
    {
      "type": "textarea",
      "id": "trending_description",
      "label": "Trending Section Description",
      "default": "Experience the future with our curated collection of innovative gadgets from tradelle.io."
    },
    {
      "type": "text",
      "id": "trending_tag",
      "label": "Trending Tag",
      "default": "Innovation"
    },
    {
      "type": "text",
      "id": "featured_video_filename",
      "label": "Featured Video Filename",
      "info": "Enter just the filename (e.g. 'synthify-goods-featured-product.mp4')",
      "default": "synthify-goods-featured-product.mp4"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ],
  "max_blocks": 12
}
{% endschema %}