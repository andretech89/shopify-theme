<!-- Featured Products Section -->
<section class="featured-grid-container">
  <div class="container mx-auto">
    <h2 class="text-4xl font-black text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Featured Products' }}
    </h2>
    
    <div class="featured-grid">
      <!-- Featured Video Item -->
      {% if section.settings.show_trending_video %}
      <div class="featured-grid-item featured-item">
        <span class="featured-badge">{{ section.settings.trending_badge | default: 'Now Trending' }}</span>
        <video autoplay loop muted playsinline class="featured-grid-item-media">
          <source src="{{ section.settings.featured_video_filename | asset_url }}" type="video/mp4">
        </video>
        <div class="featured-grid-item-content">
          <h3 class="featured-grid-item-title">{{ section.settings.trending_title | default: 'Discover the Unseen' }}</h3>
          <p class="featured-grid-item-description">{{ section.settings.trending_description | default: 'Experience the future with our curated collection of innovative gadgets from tradelle.io.' }}</p>
          <div class="featured-grid-item-footer">
            <span class="featured-grid-item-tag">{{ section.settings.trending_tag | default: 'Innovation' }}</span>
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Manual Product Selection -->
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product != blank %}
          {% assign product = block.settings.product %}
          <a href="{{ product.url }}" class="featured-grid-item regular-item">
            {% if product.featured_media %}
              <img src="{{ product.featured_media | image_url: width: 400 }}" 
                   alt="{{ product.featured_media.alt | escape }}" 
                   width="400" height="400"
                   class="featured-grid-item-media">
            {% else %}
              <div class="featured-grid-item-media bg-gray-800 flex items-center justify-center">
                <i class="fas fa-image text-4xl text-gray-600"></i>
              </div>
            {% endif %}
            
            <div class="featured-grid-item-content">
              <h3 class="featured-grid-item-title">{{ product.title | truncate: 40 }}</h3>
              <p class="featured-grid-item-description">{{ product.description | strip_html | truncate: 100 }}</p>
              <div class="featured-grid-item-footer">
                <span class="featured-grid-item-tag">{{ product.price | money }}</span>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}

      <!-- Fallback: Collection-based products if no manual products selected -->
      {% if section.blocks.size == 0 %}
        {% if section.settings.collection != blank %}
          {% assign selected_collection = collections[section.settings.collection] %}
          {% assign products_to_show = section.settings.products_count | default: 6 %}
          
          {% for product in selected_collection.products %}
            {% if forloop.index <= products_to_show %}
              <a href="{{ product.url }}" class="featured-grid-item regular-item">
                {% if product.featured_media %}
                  <img src="{{ product.featured_media | image_url: width: 400 }}" 
                       alt="{{ product.featured_media.alt | escape }}" 
                       width="400" height="400"
                       class="featured-grid-item-media">
                {% else %}
                  <div class="featured-grid-item-media bg-gray-800 flex items-center justify-center">
                    <i class="fas fa-image text-4xl text-gray-600"></i>
                  </div>
                {% endif %}
                
                <div class="featured-grid-item-content">
                  <h3 class="featured-grid-item-title">{{ product.title | truncate: 40 }}</h3>
                  <p class="featured-grid-item-description">{{ product.description | strip_html | truncate: 100 }}</p>
                  <div class="featured-grid-item-footer">
                    <span class="featured-grid-item-tag">{{ product.price | money }}</span>
                  </div>
                </div>
              </a>
            {% endif %}
          {% endfor %}
        {% else %}
          <!-- If no collection or manual products selected, show placeholder items -->
          {% assign placeholder_count = section.settings.products_count | default: 6 %}
          {% for i in (1..placeholder_count) %}
            <div class="featured-grid-item regular-item">
              <div class="featured-grid-item-media bg-gray-800 flex items-center justify-center">
                <i class="fas fa-box text-4xl text-gray-600"></i>
              </div>
              <div class="featured-grid-item-content">
                <h3 class="featured-grid-item-title">Product Coming Soon</h3>
                <p class="featured-grid-item-description">Amazing products will appear here once you import them from tradelle.io</p>
                <div class="featured-grid-item-footer">
                  <span class="featured-grid-item-tag">Soon</span>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection (Fallback)",
      "info": "Choose which collection to display if no manual products are selected"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of products to show (fallback)",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_trending_video",
      "label": "Show trending video section",
      "default": true
    },
    {
      "type": "text",
      "id": "trending_badge",
      "label": "Trending Badge Text",
      "default": "Now Trending"
    },
    {
      "type": "text",
      "id": "trending_title",
      "label": "Trending Section Title",
      "default": "Discover the Unseen"
    },
    {
      "type": "textarea",
      "id": "trending_description",
      "label": "Trending Section Description",
      "default": "Experience the future with our curated collection of innovative gadgets from tradelle.io."
    },
    {
      "type": "text",
      "id": "trending_tag",
      "label": "Trending Tag",
      "default": "Innovation"
    },
    {
      "type": "text",
      "id": "featured_video_filename",
      "label": "Featured Video Filename",
      "info": "Enter just the filename (e.g. 'synthify-goods-featured-product.mp4')",
      "default": "synthify-goods-featured-product.mp4"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ],
  "max_blocks": 12
}
{% endschema %}