              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-gamepad text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ gaming_collection.title }}</h3>
                <p class="text-gray-400">{{ gaming_collection.description | default: 'Discover amazing gaming accessories' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ gaming_collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

<script src="{{ 'homepage.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show Collections Section",
      "default": true,
      "info": "Toggle this section on/off"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop by Category"
    }
  ],
  "presets": [
    {
      "name": "Collections Grid"
    }
  ]
}
{% endschema %}