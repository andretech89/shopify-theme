<!-- Collections Section -->
{% if section.settings.show_collections and collections.size > 1 %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- Get first 6 collections (excluding 'all') -->
    {% assign filtered_collections = collections | where: 'handle', '!= all' %}
    {% assign collections_to_show = filtered_collections | slice: 0, 6 %}
    
    <!-- First Row: First 3 collections -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {% for i in (0..2) %}
        {% assign collection = collections_to_show[i] %}
        {% if collection %}
          <a href="{{ collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if collection.featured_image %}
                <img src="{{ collection.featured_image | image_url: width: 400 }}" 
                     alt="{{ collection.title }}" 
                     class="w-full h-48 object-cover"
                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-th-large text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ collection.title }}</h3>
                <p class="text-gray-400">{{ collection.description | default: 'Discover amazing products in this collection' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% else %}
          <!-- Placeholder if no collection available -->
          <div class="bg-gray-800 rounded-lg overflow-hidden">
            <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
              <i class="fas fa-th-large text-4xl text-gray-500"></i>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">Coming Soon</h3>
              <p class="text-gray-400">New collection coming soon</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Second Row: Next 3 collections -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for i in (3..5) %}
        {% assign collection = collections_to_show[i] %}
        {% if collection %}
          <a href="{{ collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if collection.featured_image %}
                <img src="{{ collection.featured_image | image_url: width: 400 }}" 
                     alt="{{ collection.title }}" 
                     class="w-full h-48 object-cover"
                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-th-large text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ collection.title }}</h3>
                <p class="text-gray-400">{{ collection.description | default: 'Discover amazing products in this collection' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% else %}
          <!-- Placeholder if no collection available -->
          <div class="bg-gray-800 rounded-lg overflow-hidden">
            <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
              <i class="fas fa-th-large text-4xl text-gray-500"></i>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">Coming Soon</h3>
              <p class="text-gray-400">New collection coming soon</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<script src="{{ 'homepage.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show Collections Section",
      "default": true,
      "info": "Toggle this section on/off"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop by Category"
    }
  ],
  "presets": [
    {
      "name": "Collections Grid"
    }
  ]
}
{% endschema %}