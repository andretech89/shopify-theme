<!-- sections/collections-grid.liquid -->

<!-- Collections Section -->
{% if section.settings.show_collections %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- Fixed 3x2 Grid Layout -->
    <div class="max-w-6xl mx-auto">
      <!-- Row 1 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <!-- Car Accessories -->
        {% assign car_collection = collections['car-accessories'] %}
        {% if car_collection %}
          <a href="{{ car_collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if car_collection.featured_image %}
                <img src="{{ car_collection.featured_image | image_url: width: 400 }}" 
                     alt="{{ car_collection.title }}" 
                     class="w-full h-48 object-cover"
                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-car text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ car_collection.title }}</h3>
                <p class="text-gray-400">{{ car_collection.description | default: 'Discover amazing car accessories' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ car_collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% endif %}

        <!-- Desktop Accessories -->
        {% assign desktop_collection = collections['desktop-accessories'] %}
        {% if desktop_collection %}
          <a href="{{ desktop_collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if desktop_collection.featured_image %}
                <img src="{{ desktop_collection.featured_image | image_url: width: 400 }}" 
                     alt="{{ desktop_collection.title }}" 
                     class="w-full h-48 object-cover"
                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-desktop text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ desktop_collection.title }}</h3>
                <p class="text-gray-400">{{ desktop_collection.description | default: 'Discover amazing desktop accessories' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ desktop_collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% endif %}

        <!-- Home & Garden -->
        {% assign home_collection = collections['home-garden'] %}
        {% if home_collection %}
          <a href="{{ home_collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if home_collection.featured_image %}
