<!-- sections/collections-grid.liquid -->

<!-- Collections Section -->
{% if section.settings.show_collections %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- FIXED 3x2 Grid Layout - 3 columns, 2 rows -->
    <div class="max-w-6xl mx-auto">
      
      <!-- ROW 1 - Three Collections -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        
        <!-- Position 1: Top Left -->
        {% if section.settings.collection_1 != blank %}
          {% assign collection_1 = collections[section.settings.collection_1] %}
          {% if collection_1 %}
            <a href="{{ collection_1.url }}" class="group block">
              <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105 h-full">
                {% if collection_1.featured_image %}
                  <img src="{{ collection_1.featured_image | image_url: width: 400 }}" 
                       alt="{{ collection_1.title }}" 
                       class="w-full h-48 object-cover"
                       width="400" height="192">
                {% else %}
                  <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                    <i class="{{ section.settings.collection_1_icon | default: 'fas fa-shopping-bag' }} text-4xl text-gray-500"></i>
                  </div>
                {% endif %}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-2">{{ collection_1.title }}</h3>
                  <p class="text-gray-400 text-sm mb-3">
                    {% if section.settings.collection_1_description != blank %}
                      {{ section.settings.collection_1_description | truncate: 100 }}
                    {% else %}
                      {{ collection_1.description | truncate: 100 }}
                    {% endif %}
                  </p>
                  <div class="mt-4">
                    <span class="text-accent font-medium">{{ collection_1.products_count }} products →</span>
                  </div>
                </div>
              </div>
            </a>
          {% endif %}
