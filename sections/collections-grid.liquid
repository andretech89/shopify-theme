                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-paw text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ pet_collection.title }}</h3>
