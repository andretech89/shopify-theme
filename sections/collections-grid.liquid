                     alt="{{ home_collection.title }}" 
                     class="w-full h-48 object-cover"
                     width="400" height="192">
              {% else %}
                <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                  <i class="fas fa-home text-4xl text-gray-500"></i>
                </div>
              {% endif %}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{{ home_collection.title }}</h3>
                <p class="text-gray-400">{{ home_collection.description | default: 'Discover amazing home & garden products' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ home_collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% endif %}
      </div>

      <!-- Row 2 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Pet Supplies -->
        {% assign pet_collection = collections['pet-supplies'] %}
