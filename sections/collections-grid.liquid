<!-- Collections Section -->
{% if section.settings.show_collections and collections.size > 1 %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- First Row: Car Accessories, Desktop Accessories, Home & Garden -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      
      <!-- Car Accessories -->
      {% assign car_collection = null %}
      {% for collection in collections %}
        {% unless collection.handle == 'all' %}
          {% assign title_lower = collection.title | downcase %}
          {% assign handle_lower = collection.handle | downcase %}
          {% if title_lower contains 'car' or handle_lower contains 'car' or handle_lower contains 'auto' %}
            {% assign car_collection = collection %}
            {% break %}
          {% endif %}
        {% endunless %}
      {% endfor %}
      
      {% if car_collection %}
        <a href="{{ car_collection.url }}" class="group">
          <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
            {% if car_collection.featured_image %}
              <img src="{{ car_collection.featured_image | image_url: width: 400 }}" 
                   alt="{{ car_collection.title }}" 
                   class="w-full h-48 object-cover"
                   width="400" height="192">
            {% else %}
              <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                <i class="fas fa-car text-4xl text-gray-500"></i>
              </div>
            {% endif %}
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">{{ car_collection.title }}</h3>
              <p class="text-gray-400">{{ car_collection.description | default: 'Discover amazing car accessories' | truncate: 100 }}</p>
              <div class="mt-4">
                <span class="text-accent">{{ car_collection.products_count }} products →</span>
              </div>
            </div>
          </div>
        </a>
      {% else %}
        <div class="bg-gray-800 rounded-lg overflow-hidden">
          <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
            <i class="fas fa-car text-4xl text-gray-500"></i>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-2">Car Accessories</h3>
            <p class="text-gray-400">Collection coming soon</p>
          </div>
        </div>
      {% endif %}

      <!-- Desktop Accessories -->
