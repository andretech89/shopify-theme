            {% assign collection_1 = collections[section.settings.collection_1] %}
            {% if collection_1 %}
              <a href="{{ collection_1.url }}" class="group block h-full">
                <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105 h-full flex flex-col">
                  {% if collection_1.featured_image %}
                    <img src="{{ collection_1.featured_image | image_url: width: 400 }}" 
                         alt="{{ collection_1.title }}" 
                         class="w-full h-48 object-cover flex-shrink-0"
                         width="400" height="192">
                  {% else %}
                    <div class="w-full h-48 bg-gray-700 flex items-center justify-center flex-shrink-0">
                      <i class="{{ section.settings.collection_1_icon | default: 'fas fa-shopping-bag' }} text-4xl text-gray-500"></i>
                    </div>
                  {% endif %}
                  <div class="p-6 flex-grow flex flex-col">
                    <h3 class="text-xl font-bold text-white mb-2">{{ collection_1.title }}</h3>
                    <p class="text-gray-400 text-sm mb-3 flex-grow">
                      {% if section.settings.collection_1_description != blank %}
                        {{ section.settings.collection_1_description | truncate: 100 }}
                      {% else %}
                        {{ collection_1.description | truncate: 100 }}
                      {% endif %}
                    </p>
                    <div class="mt-auto">
                      <span class="text-accent font-medium">{{ collection_1.products_count }} products ‚Üí</span>
                    </div>
                  </div>
                </div>
