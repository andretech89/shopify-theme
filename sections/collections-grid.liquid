<!-- sections/collections-grid.liquid -->

<!-- Collections Section -->
{% if section.settings.show_collections %}

<style>
.collections-grid-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

@media (min-width: 1024px) {
  .collections-grid-row {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .collections-grid-row {
    grid-template-columns: 1fr;
  }
}
</style>

<section class="py-16 bg-gray-900">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- Get collections to display -->
    {% assign collections_to_show = '' %}
    {% if section.settings.collections_to_show != blank %}
      {% assign selected_handles = section.settings.collections_to_show | split: ',' %}
      {% assign collections_to_show = '' %}
      {% for handle in selected_handles %}
        {% assign trimmed_handle = handle | strip %}
        {% assign collection = collections[trimmed_handle] %}
        {% if collection %}
          {% unless collections_to_show == '' %}
            {% assign collections_to_show = collections_to_show | append: ',' %}
          {% endunless %}
          {% assign collections_to_show = collections_to_show | append: collection.handle %}
        {% endif %}
      {% endfor %}
    {% else %}
      <!-- Default order for your 6 collections -->
      {% assign collections_to_show = 'car-accessories,desktop-accessories,home-garden,pet-supplies,sporting-goods,video-game-accessories' %}
    {% endif %}
    
    {% assign collection_handles = collections_to_show | split: ',' %}
    
    <!-- First Row: 3 collections -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {% for i in (0..2) %}
        {% if collection_handles[i] %}
          {% assign collection = collections[collection_handles[i]] %}
          {% if collection %}
            <a href="{{ collection.url }}" class="group">
              <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
                {% if collection.featured_image %}
                  <img src="{{ collection.featured_image | image_url: width: 400 }}" 
                       alt="{{ collection.title }}" 
                       class="w-full h-48 object-cover"
                       width="400" height="192">
                {% else %}
                  <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                    <i class="fas fa-th-large text-4xl text-gray-500"></i>
                  </div>
                {% endif %}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-2">{{ collection.title }}</h3>
                  <p class="text-gray-400">{{ collection.description | default: 'Discover amazing products in this collection' | truncate: 100 }}</p>
                  <div class="mt-4">
                    <span class="text-accent">{{ collection.products_count }} products →</span>
                  </div>
                </div>
              </div>
            </a>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <!-- Second Row: 3 collections -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for i in (3..5) %}
        {% if collection_handles[i] %}
          {% assign collection = collections[collection_handles[i]] %}
          {% if collection %}
            <a href="{{ collection.url }}" class="group">
              <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
                {% if collection.featured_image %}
                  <img src="{{ collection.featured_image | image_url: width: 400 }}" 
                       alt="{{ collection.title }}" 
                       class="w-full h-48 object-cover"
                       width="400" height="192">
                {% else %}
                  <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                    <i class="fas fa-th-large text-4xl text-gray-500"></i>
                  </div>
                {% endif %}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-2">{{ collection.title }}</h3>
                  <p class="text-gray-400">{{ collection.description | default: 'Discover amazing products in this collection' | truncate: 100 }}</p>
                  <div class="mt-4">
                    <span class="text-accent">{{ collection.products_count }} products →</span>
                  </div>
                </div>
              </div>
            </a>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<script src="{{ 'homepage.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show Collections Section",
      "default": true,
      "info": "Toggle this section on/off"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "collections_to_show",
      "label": "Collections to Display",
      "info": "Enter collection handles separated by commas in the order you want them displayed. Default order: car-accessories,desktop-accessories,home-garden,pet-supplies,sporting-goods,video-game-accessories",
      "placeholder": "car-accessories,desktop-accessories,home-garden,pet-supplies,sporting-goods,video-game-accessories"
    },
    {
      "type": "range",
      "id": "collections_count",
      "label": "Number of collections to show",
      "min": 3,
      "max": 6,
      "step": 1,
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Collections Grid"
    }
  ]
}
{% endschema %}