                <h3 class="text-xl font-bold text-white mb-2">{{ sport_collection.title }}</h3>
                <p class="text-gray-400">{{ sport_collection.description | default: 'Discover amazing sporting goods' | truncate: 100 }}</p>
                <div class="mt-4">
                  <span class="text-accent">{{ sport_collection.products_count }} products →</span>
                </div>
              </div>
            </div>
          </a>
        {% endif %}

        <!-- Video Game Accessories -->
        {% assign gaming_collection = collections['video-game-accessories'] %}
        {% if gaming_collection %}
          <a href="{{ gaming_collection.url }}" class="group">
            <div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-all duration-300 hover:scale-105">
              {% if gaming_collection.featured_image %}
                <img src="{{ gaming_collection.featured_image | image_url: width: 400 }}" 
                     alt="{{ gaming_collection.title }}" 
