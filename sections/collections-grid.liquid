<!-- sections/collections-grid.liquid -->

<!-- Collections Section -->
{% if section.settings.show_collections %}
<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      {{ section.settings.heading | default: 'Shop by Category' }}
    </h2>
    
    <!-- FIXED 3x2 Grid Layout - Always shows 6 positions with consistent heights -->
    <div class="max-w-6xl mx-auto">
      
      <!-- ROW 1 - Top 3 Collections (Always Visible) -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        
        <!-- Position 1: Top Left -->
        <div class="collection-card">
          {% if section.settings.collection_1 != blank %}
            {% assign collection_1 = collections[section.settings.collection_1] %}
            {% if collection_1 %}
              <a href="{{ collection_1.url }}" class="group block h-full">
                <div class="collection-card-inner">
                  {% if collection_1.featured_image %}
                    <div class="collection-image-container">
                      <img src="{{ collection_1.featured_image | image_url: width: 400 }}" 
                           alt="{{ collection_1.title }}" 
                           class="collection-image"
                           width="400" height="192">
                    </div>
                  {% else %}
                    <div class="collection-placeholder">
                      <i class="{{ section.settings.collection_1_icon | default: 'fas fa-shopping-bag' }} text-4xl text-gray-500"></i>
                    </div>
                  {% endif %}
                  <div class="collection-content">
                    <h3 class="collection-title">{{ collection_1.title }}</h3>
                    <p class="collection-description">
                      {% if section.settings.collection_1_description != blank %}
                        {{ section.settings.collection_1_description | truncate: 80 }}
                      {% else %}
                        {{ collection_1.description | strip_html | truncate: 80 }}
                      {% endif %}
                    </p>
                    <div class="collection-footer">
                      <span class="collection-count">{{ collection_1.products_count }} products →</span>
                    </div>
                  </div>
                </div>
              </a>
            {% endif %}
          {% else %}
            <!-- Fallback for empty collection -->
            <div class="collection-card-inner">
              <div class="collection-placeholder">
                <i class="fas fa-shopping-bag text-4xl text-gray-500"></i>
              </div>
              <div class="collection-content">
                <h3 class="collection-title">Select Collection</h3>
