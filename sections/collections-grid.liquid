<style>
/* Fixed height and consistent styling for all collection cards */
.collection-card {
  height: 350px;
}

.collection-card-inner {
  height: 100%;
  background: #1f2937; /* gray-800 */
  border-radius: 0.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.collection-card-inner:hover {
  background: #374151; /* gray-700 */
  transform: scale(1.05);
}

.collection-image-container {
  flex-shrink: 0;
  height: 192px;
  overflow: hidden;
}

.collection-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-placeholder {
  width: 100%;
  height: 192px;
  background: #374151; /* gray-700 */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.collection-content {
  padding: 1.5rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.collection-title {
  color: white;
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  line-height: 1.3;
}

.collection-description {
  color: #9ca3af; /* gray-400 */
  font-size: 0.875rem;
  margin-bottom: 0.75rem;
  flex-grow: 1;
  line-height: 1.4;
}

.collection-footer {
  margin-top: auto;
}

.collection-count {
  color: #f59e0b; /* text-accent / yellow-500 */
  font-weight: 500;
  font-size: 0.875rem;
}

/* Ensure consistent grid alignment on mobile */
@media (max-width: 767px) {
  .collection-card {
    height: 300px;
  }
}
</style>

